@using XWingTO.Core
@model XWingTO.Web.ViewModels.Tournament.RoundViewModel

@{
	Layout = "_Layout";
}

<div class="row">
	Round @Model.Round.RoundNumber
</div>
@foreach (Game game in Model.Round.Games.OrderBy(g => g.TableNumber))
{
	<div>
		<div class="row">
			<div class="text-center">
				Table @game.TableNumber
			</div>
		</div>
		<div class="row">
			<div>
				@game.Player1
			</div>
			Vs
			<div>
				@game.Player2
			</div>
		</div>
	</div>
}

